<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <application>
        <system-event-listener>
                <system-event-listener-class>com.jsf.conventions.system.VersionSystemEventListener</system-event-listener-class>
                <system-event-class>javax.faces.event.PostConstructApplicationEvent</system-event-class>
                <source-class>javax.faces.application.Application</source-class>
        </system-event-listener>
    </application>  
   <component>
        <component-type>com.jsf.conventions.component.PanelGrid</component-type>
        <component-class>com.jsf.conventions.component.panelgrid.PanelGrid</component-class>
    </component>
     <component>
        <component-type>com.jsf.conventions.component.SecurityArea</component-type>
        <component-class>com.jsf.conventions.component.securityarea.SecurityArea</component-class>
    </component>
    
     <component>
        <component-type>com.jsf.conventions.component.ValidationPanel</component-type>
        <component-class>com.jsf.conventions.component.validationpanel.ValidationPanel</component-class>
    </component>

    <render-kit>
        <renderer>
            <component-family>com.jsf.conventions.component</component-family>
            <renderer-type>com.jsf.conventions.component.PanelGridRenderer</renderer-type>
            <renderer-class>com.jsf.conventions.component.panelgrid.PanelGridRenderer</renderer-class>
        </renderer>
         <renderer>
            <component-family>com.jsf.conventions.component</component-family>
            <renderer-type>com.jsf.conventions.component.SecurityAreaRenderer</renderer-type>
            <renderer-class>com.jsf.conventions.component.securityarea.SecurityAreaRenderer</renderer-class>
        </renderer>
        <renderer>
            <component-family>com.jsf.conventions.component</component-family>
            <renderer-type>com.jsf.conventions.component.ValidationPanelRenderer</renderer-type>
            <renderer-class>com.jsf.conventions.component.validationpanel.ValidationPanelRenderer</renderer-class>
        </renderer>
     </render-kit>
     
</faces-config>
